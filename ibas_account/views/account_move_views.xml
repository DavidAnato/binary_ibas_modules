<odoo>
    <data>

        <record id="ibas_account_move_view_form" model="ir.ui.view">
            <field name="name">account.move.view.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='invoice_vendor_bill_id']" position="after">
                    <field name="requested_by"/>
                </xpath>

                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">draft,posted</attribute>
                    <attribute name="attrs">{'invisible': [('type', '=', 'in_invoice')]}</attribute>
                </xpath>

                <xpath expr="//field[@name='state']" position="after">
                    <field name="bill_state" widget="statusbar" statusbar_visible="draft,submitted,finance_head,coo,ceo,posted" attrs="{'invisible': [('type', '!=', 'in_invoice')]}"/>
                </xpath>

                <xpath expr="//button[@name='action_post']" position="before">
                    <button name="action_submit" string="Submit" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible': ['|',('state', '!=', 'draft'),('type','!=','in_invoice')]}"/>
                    
                    <button name="action_approve_finance_head" string="Approve" class="oe_highlight" type="object" groups="ibas_account.group_account_finance_head" attrs="{'invisible': ['|',('state', '!=', 'submitted'),('type','!=','in_invoice')]}"/>

                    <button name="action_approve_coo" string="Approve" class="oe_highlight" type="object" groups="ibas_account.group_account_coo" attrs="{'invisible': ['|',('state', '!=', 'finance_head'),('type','!=','in_invoice')]}"/>
                    
                    <button name="action_approve_ceo" string="Approve" class="oe_highlight" type="object" groups="ibas_account.group_account_ceo" attrs="{'invisible': ['|',('state', '!=', 'coo'),('type','!=','in_invoice')]}"/>
                    
                    <button name="action_reject" string="Reject" class="oe_highlight" type="object" groups="ibas_account.group_account_finance_head,ibas_account.group_account_coo,ibas_account.group_account_ceo" attrs="{'invisible': ['|',('state', 'not in', ['submitted','finance_head','coo']),('type','!=','in_invoice')]}"/>

                    <button name="action_draft" string="Set to Draft" class="oe_highlight" type="object" groups="base.group_no_one"/>
                </xpath>

                <xpath expr="//header" position="after">
                    <div groups="account.group_account_invoice" class="alert alert-info" role="alert" style="margin-bottom:0px;"
                         attrs="{'invisible': ['|',('state','!=','submitted'),('type','!=','in_invoice')]}">
                        <bold>To Approve by Finance Head.</bold>
                    </div>
                    <div groups="account.group_account_invoice" class="alert alert-info" role="alert" style="margin-bottom:0px;"
                         attrs="{'invisible': ['|',('state','!=','finance_head'),('type','!=','in_invoice')]}">
                        <bold>To Approve by COO.</bold>
                    </div>
                    <div groups="account.group_account_invoice" class="alert alert-info" role="alert" style="margin-bottom:0px;"
                         attrs="{'invisible': ['|',('state','!=','coo'),('type','!=','in_invoice')]}">
                        <bold>To Approve by CEO.</bold>
                    </div>
                </xpath>

                <xpath expr="//button[@name='action_post']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|',('state', '!=', 'draft'),('type','=','in_invoice')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_post']" position="after">
                    <button name="action_post" string="Post" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible': [('state', '!=', 'ceo')]}"/>
                </xpath>

            </field>
        </record>

